{
  "name": "multipassmanager",
  "displayName": "Multipass Manager",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.1.36"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "multipass",
          "title": "Multipass",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "multipass": [
        {
          "id": "multipassList",
          "name": "Instances"
          
        }
      ]
    },
    "commands": [
      {
        "command": "extension.startInstance",
        "title": "Start Instance",
        "category": "Multipass"
      },
      {
        "command": "multipass.stop",
        "title": "Stop Instance"
      },
      {
        "command": "multipass.delete",
        "title": "Delete Instance"
      },
      {
        "command": "multipass.shell",
        "title": "Open Shell in VSCode Terminal"
      },
      {
        "command": "multipass.suspend",
        "title": "Suspend Instance"
      },
      {
        "command": "multipass.recover",
        "title": "Recover Deleted Instance"
      },
      {
        "command": "multipass.restart",
        "title": "Restart Instance"
      },
      {
        "command": "multipass.exec",
        "title": "Run A Command On The Instance"
      },
      {
        "command": "extension.launchInstance",
        "title": "Launch New Instance",
        "icon": {
          "light": "media/light/add.svg",
          "dark": "media/dark/add.svg"
        }
      },
      {
        "command": "multipass.purge",
        "title": "Purge All Instances",
        "icon": {
          "light": "media/light/trash.svg",
          "dark": "media/dark/trash.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.launchInstance",
          "group": "navigation"
          
        },
        {
          "command": "multipass.purge",
          "group": "navigation"
          
        }
      ],
      "view/item/context": [
        {
          "command": "extension.startInstance",
          "group": "a@1"
        },
        {
          "command": "multipass.stop",
          "group": "a@2"
        },
        {
          "command": "multipass.delete",
          "group": "a@3"
        },
        {
          "command": "multipass.shell",
          "group": "c@1"
        },
        {
          "command": "multipass.suspend",
          "group": "b@1"
        },
        {
          "command": "multipass.recover",
          "group": "b@2"
        },
        {
          "command": "multipass.restart",
          "group": "b@3"
        },
        {
          "command": "multipass.exec",
          "group": "c@2"
        }
      ]
      
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "mocha": "^10.2.0",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3",
    "vscode": "^1.1.34"
  },
  "dependencies": {
    "@types/node": "^20.10.6"
  }
}
